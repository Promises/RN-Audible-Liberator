{
  "name": "librisync",
  "version": "0.0.4",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "npm run build:rust:android && expo run:android",
    "android:dev": "expo start --android",
    "android:release": "npm run build:rust:android && cd android && ./gradlew assembleRelease && cd .. && adb install -r android/app/build/outputs/apk/release/app-release.apk",
    "android:bundle": "npm run prebuild:android && npm run integrate:ffmpeg && npm run build:rust:android && cd android && ./gradlew bundleRelease",
    "android:bundle:cloud": "eas build --platform android --profile production",
    "android:build:local": "npm run build:rust:android && eas build --platform android --profile preview --local",
    "android:build:production": "npm run build:rust:android && eas build --platform android --profile production --local",
    "ios": "npm run build:rust:ios && expo run:ios",
    "ios:dev": "expo start --ios",
    "web": "expo start --web",
    "build:rust": "./scripts/build-rust.sh",
    "build:rust:android": "./scripts/build-rust-android.sh",
    "build:rust:ios": "./scripts/build-rust-ios.sh",
    "build:ffmpeg": "./scripts/build-ffmpeg-kit.sh",
    "integrate:ffmpeg": "./scripts/integrate-ffmpeg-kit.sh",
    "verify:16kb": "./scripts/check_elf_alignment.sh",
    "test:rust": "cd native/rust-core && cargo test",
    "test:rust:desktop": "./scripts/test-rust-desktop.sh",
    "test:android": "./scripts/test-and-run.sh android",
    "test:ios": "./scripts/test-and-run.sh ios",
    "rust:cli": "cd native/rust-core && cargo run --features cli --bin librisync-cli --",
    "rust:example": "cd native/rust-core && cargo run --example",
    "rust:doc": "cd native/rust-core && cargo doc --open",
    "rust:fmt": "cd native/rust-core && cargo fmt",
    "rust:clippy": "cd native/rust-core && cargo clippy -- -D warnings",
    "icons:generate": "inkscape assets/app-icon.svg --export-filename=assets/icon.png --export-width=1024 --export-height=1024 && inkscape assets/adaptive-icon.svg --export-filename=assets/adaptive-icon.png --export-width=1024 --export-height=1024",
    "prebuild:android": "npx expo prebuild --platform android --clean",
    "prebuild:ios": "npx expo prebuild --platform ios --clean"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/bottom-tabs": "^7.4.8",
    "@react-navigation/native": "^7.1.18",
    "@react-navigation/native-stack": "^7.3.27",
    "expo": "~54.0.12",
    "expo-build-properties": "~1.0.9",
    "expo-constants": "^18.0.10",
    "expo-document-picker": "^14.0.7",
    "expo-file-system": "~19.0.16",
    "expo-modules-core": "~3.0.20",
    "expo-secure-store": "~15.0.7",
    "expo-status-bar": "~3.0.8",
    "expo-updates": "^29.0.12",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-webview": "13.15.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
